<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger.%method\(%line\) - %message%n</pattern>
    </encoder>
  </appender>

  <logger name="com.crypteron" level="INFO" />
  <logger name="org.hibernate" level="ERROR" />

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>